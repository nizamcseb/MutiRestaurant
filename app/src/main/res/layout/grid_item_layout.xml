<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/grid_color_selector"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/grid_item_image"
        android:layout_width="match_parent"
        android:scaleType="center" android:gravity="center"
        android:layout_height="140dp" />

    <TextView
        android:id="@+id/grid_item_title"
        android:layout_width="match_parent" android:text="chicken@meast"
        android:layout_height="wrap_content"
        android:layout_marginTop="-22dp" android:background="#70000000"
        android:ellipsize="marquee" android:singleLine="true"
        android:gravity="center"
         android:textAllCaps="true"
        android:textSize="15sp" android:textColor="@color/white" android:textStyle="bold" />
    <TextView
        android:id="@+id/grid_item_id"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginTop="-20dp"
        android:textColor="@color/white" android:textStyle="bold" android:visibility="invisible" />
</LinearLayout>