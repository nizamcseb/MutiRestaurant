<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
   >


    <LinearLayout
        android:orientation="vertical" android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical" android:id="@+id/lay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" >
            <LinearLayout
                android:orientation="horizontal" android:id="@+id/lay3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true" android:padding="3dp"
                android:layout_centerHorizontal="true" >

                <TextView
                    android:id="@+id/tv_ProdName"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:singleLine="true"
                    android:textColor="@color/black" android:textSize="15dp"
                    android:text="Pname" android:layout_gravity="top" android:layout_marginRight="2dp" />
                <TextView
                    android:layout_width="wrap_content" android:layout_marginLeft="90dp"
                    android:layout_height="wrap_content" android:layout_marginRight="3dp"
                    android:text="Qty" android:textColor="@color/black"
                    android:id="@+id/tv_qty" />
                <TextView
                    android:layout_width="wrap_content" android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" android:layout_marginRight="3dp"
                    android:text="X" android:textColor="@color/black"
                    android:id="@+id/tv_x" />
                <TextView
                    android:id="@+id/tv_ProdRate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:singleLine="true"
                    android:textColor="@color/black" android:textSize="15dp"
                    android:text="$" android:layout_gravity="top" android:layout_marginRight="2dp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
