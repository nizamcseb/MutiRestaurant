<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_border" android:layout_margin="20dp"
    tools:context="com.mst.vroom.activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:textSize="18dp"
            android:text="Signup Now!"
            android:textColor="#ffffff"
            android:gravity="center"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="please enter your verification Code"
            android:paddingLeft="15dp"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/tv_verifycode"
            android:background="#ffffff"
            android:textColor="#000000"
            android:hint="Verification Code"
            android:textColorHint="#000000" android:paddingLeft="10dp"
            android:inputType="phone" android:maxLines="1" android:maxLength="4" android:digits="0123456789"
            android:singleLine="true">
            <requestFocus/>
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <Button android:id="@+id/ok_btn" style="?android:textAppearanceSmall"
            android:layout_width="100dp" android:layout_height="wrap_content"
            android:background="@color/secondary_text_material_dark"
            android:text="Send"
            android:textColor="@android:color/white"
            android:layout_marginRight="20dp"
            android:textSize="17dp"
            android:textStyle="bold" />
        <Button android:id="@+id/cancel_btn" style="?android:textAppearanceSmall"
            android:layout_width="100dp" android:layout_height="wrap_content"
            android:background="@color/secondary_text_material_dark"
            android:text="Cancel"

            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white"
            android:textSize="17dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>